<h2>Edit Movie</h2>
<form method="POST" action="/movies/{{movies.id}}/edit">
    <label for="title">Title:</label>
    <input type="text" name="title" value={{movies.title}}>

    <label for="genre">Genre:</label>
    <input type="text" name="genre" value={{movies.genre}}>

    <label for="plot">Plot:</label>
    <input type="text" name="plot" value={{movies.plot}}>

    <label for="cast">Cast:</label>
    <select name="cast" multiple>
        {{#each celebrities}}
            <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>
    
    <button type="submit">Create movie</button>

</form>